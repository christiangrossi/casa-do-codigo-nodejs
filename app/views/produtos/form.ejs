<html>
    <body>
        <form action="/produtos" method="post">
            <div>
                <label for="titulo">Titulo</label>
                <input type="text" id="titulo" name="titulo" placeholder="insira o título do livro">
            </div>
            <div>
                <label for="preco">Preço</label>
                <input type="text" id="preco" name="preco" placeholder="insira o preço do livro">
            </div>
            <div>
                <label for="descricao">Descrição</label>
                <textarea cols="20" rows="10" name="descricao" id="descricao" placeholder="descreva o produto"></textarea>
            </div>
            <input type="submit" value="salvar">
        </form>
    </body>
</html>